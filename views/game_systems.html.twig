{% extends "layout.html.twig" %}

{% block content %}
{{ include('inc/pagination.html.twig', {slug: 'game-systems', prefix: prefix}) }}

{% if game_systems | length > 0 %}
    {% set rows = (game_systems|length / 2)|round(0, 'ceil') %}
    <div class="row">
    {% for column in game_systems|batch(rows, false) %}
        <div class="col-md-6"><ul>
        {% for game_system in column %}
        {% if game_system != false %}
            <li><a href="/game-system/{{ game_system.game_system_id }}/">
                {{ game_system.game_system }}
            </a></li>
        {% endif %}
        {% endfor %}
        </ul></div>
    {% endfor %}
    </div>
{% else %}
    <p>No Publishers Found</p>
{% endif %}
{% endblock content %}
